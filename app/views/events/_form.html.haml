= form_for @event do |f|
  -if @event.errors.any?
    #error_explanation
      %h2= "#{pluralize(@event.errors.count, "error")} prohibited this event from being saved:"
      %ul
        - @event.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :address_line_1
    = f.text_field :address_line_1
  .field
    = f.label :address_line_2
    = f.text_field :address_line_2
  .field
    = f.label :city
    = f.text_field :city
  .field
    = f.label :when
    = f.datetime_select :when
  .field
    = f.label :hashtag
    = f.text_field :hashtag
  .field
    = f.hidden_field :latitude
  .field
    = f.hidden_field :longitude
  #mapa{:style => "margin:0px;padding:0px;height:500px;width:100%;"}
  .actions
    = f.submit 'Save'

- content_for :additional_css do
  :css
    #mapa img {
      max-width: none;
    }

- content_for :additional_js do
  %script{:src => "http://maps.google.com/maps/api/js?sensor=false"}
    :javascript
      var map;
      google.maps.event.addDomListener(window, 'load', initialize);
      function initialize(){
      var mapCenter=new google.maps.LatLng(18.644901,-91.817952);
      var mapOptions={
        zoom:18,
        center:mapCenter,
        mapTypeId: google.maps.MapTypeId.ROADMAP
      };
      map=new google.maps.Map($("#mapa")[0],mapOptions);
      GetNearEvents();
    }